@model ReportViewModel
<a asp-controller="Home" asp-action="Cars" class="btn btn-primary btn-go-to-cars">Go to Cars</a>
<a asp-controller="Home" asp-action="Skateboards" class="btn btn-primary btn-go-to-cars">Go to Skateboards</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-go-to-cars">Go to Bikes</a>
<a asp-controller="Home" asp-action="GenerateReport" class="btn btn-primary btn-go-to-cars">Go to Report</a>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Report</title>
</head>
<body>
    <h1>Report</h1>
    
        <h2>Cars with Rating 5</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Type</th>
                    <th>Rating</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model.Cars)
                {
                    <tr>
                        <td>@car.id</td>
                        <td>@car.model</td>
                        <td>@car.color</td>
                        <td>@car.type</td>
                        <td>@car.raiting</td>
                        <td>@car.name</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Bikes with Rating 5</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rating</th>
                    <th>Name</th>
                    <th>Speed</th>
                    <th>Size of Wheel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bike in Model.Bikes)
                {
                    <tr>
                        <td>@bike.id</td>
                        <td>@bike.raiting</td>
                        <td>@bike.name</td>
                        <td>@bike.speed</td>
                        <td>@bike.sizeOfWheel</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Skateboards with Rating 5</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rating</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skateboard in Model.Skateboards)
                {
                    <tr>
                        <td>@skateboard.id</td>
                        <td>@skateboard.raiting</td>
                        <td>@skateboard.name</td>
                    </tr>
                }
            </tbody>
        </table>
</body>
</html>
