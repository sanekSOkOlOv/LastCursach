@model MYCARS.Models.Skateboard

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Bike</title>
</head>
<body>
    <h1>Edit Bike</h1>
    <form asp-action="EditSkateboard" method="post">
        <input type="hidden" asp-for="id" />

        <div>
            <label asp-for="name">Name:</label>
            <input asp-for="name" />
            <span asp-validation-for="name"></span>
        </div>
        <div>
            <label asp-for="raiting">Rating:</label>
            <input asp-for="raiting" />
            <span asp-validation-for="raiting"></span>
        </div>
        <button type="submit">Save</button>
    </form>
    <a asp-action="Skateboards">Back to List</a>
</body>
</html>