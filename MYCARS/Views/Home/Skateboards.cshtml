@model IEnumerable<MYCARS.Models.Skateboard>

<a asp-controller="Home" asp-action="Cars" class="btn btn-primary btn-go-to-cars">Go to Cars</a>
<a asp-controller="Home" asp-action="Skateboards" class="btn btn-primary btn-go-to-cars">Go to Skateboards</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-go-to-cars">Go to Bikes</a>
<a asp-controller="Home" asp-action="GenerateReport" class="btn btn-primary btn-go-to-cars">Go to Report</a>

<div class="centered">
    <h2 class="page-title">Skateboards List</h2>
    <a asp-action="CreateSkateboard" asp-controller="Home" class="btn btn-primary">Create New Skateboard</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rating</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skateboard in Model)
            {
                <tr>
                    <td>@skateboard.id</td>
                    <td>@skateboard.raiting</td>
                    <td>@skateboard.name</td>

                    <td class="action-buttons">
                        <a asp-action="EditSkateboard" asp-route-id="@skateboard.id" class="btn btn-sm btn-primary">Edit</a>
                        <form asp-action="DeleteSkateboard" asp-route-id="@skateboard.id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this Skateboard?');">
                            <button type="submit" class="btn btn-sm delete-button">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>